<div class="row">
  <div class="col-md-3">
		<ul class="nav navbar-nav">
			<li><%= link_to "プロフィール", "./profile" %></li>
			<li><%= link_to "アカウント", "./account" %></li>
		</ul>
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-6 col-md-offset-2">
        <img src="<%= gravatar_url(@user, {size: 50 }) %>" alt="ユーザー写真" class="img-rounded" >
        <%= link_to @user.name, @user %> /　アカウント設定
      </div>
      <div class="col-md-offset-4"></div>
        <div class="col-md-offset-1 col-md-10">
          <%= form_for(@user)  do |f| %>
            <div class="form-group">
              <%= f.label :location, '場所' %>
              <%= f.text_field :location, class: 'form-control' %>
            </div>
            
            <div class="form-group">
              <%= f.label :belong, '所属' %>
              <%= f.text_field :belong, class: 'form-control' %>
            </div>
            
            <div class="form-group">
              <%= f.label :description, '自己紹介' %>
              <%= f.text_area :description, class: 'form-control' %>
            </div>
            
            <%= f.submit '更新する', class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      <div class="col-md-offset-1"></div>
    </div>
  </div>
</div>