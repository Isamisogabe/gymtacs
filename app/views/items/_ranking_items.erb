<% if favorite_items.any? %>
  <ul class="media-list media-items">
    <% favorite_items.each_with_index do |item, index| %>
      <li class="media">
        <div class="media-left">
          <p><%= index+1 %></p>
        </div>
        <div class="media-left">
          
          <a href="/users/<%= item.user_id %>" >
            <%= render "users/user_photo", user: User.find_by(id: item.user_id) %>
          </a>
        </div>
        <div class="media-body">
          <div>
            <h5 class="media-heading">
              <%= link_to item.title, item %>
            </h5>
          </div>
          <div>
            <p>
              <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
              <%= favorite_ranking_counts[item.id] %>
            </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>