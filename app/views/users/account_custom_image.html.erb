<div class="row">
  <div class="col-md-3">
		<ul class="list-group">
			<li class="list-group-item"><%= link_to "プロフィール", settings_path %></li>
			<li class="account-list list-group-item"><%= link_to "アカウント", account_path %></li>
		</ul>
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-offset-2">
        <%= render "users/user_photo", user: @user %>
        <%=link_to @user.name, @user %> /　<%= link_to "アカウント", account_path %>  /　ユーザー写真設定
      </div>
      <div class="col-md-offset-1 col-md-10">
        <%= form_for @user,  :html => {:multipart => true}  do |f| %>
          <div class="form-group">
            <%= f.label :image, "写真" %>
          　<%= image_tag @user.image.thumb.url if @user.image? %>
          　<%= f.file_field :image %>
          　<%= f.hidden_field :image_cache %>
          </div>
          <%= hidden_field_tag  :isuserimg?, true %>
          <%= f.submit '更新する', class: 'btn btn-primary ' %>
        <% end %>
      </div>
      <div class="col-md-offset-1"></div>
    </div>
  </div>
</div>