<div class="row">
  <div class="col-md-3">
		<ul class="nav navbar-nav">
			<li><a href="active">プロフィール</a></li>
			<li class="#"><a href="#">アカウント</a></li>
		</ul>
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-offset-1 col-md-2">
        <img src="<%= @user.image %>" alt="ユーザー写真" >
      </div>
      <div class="col-md-offset-1 col-md-7">
        <%= @user.name %> /　アカウント  /　ユーザー写真設定
      </div>
      <div class="col-md-offset-1"></div>
        <div class="col-md-offset-1 col-md-10">
          <%= form_for(@user) do |f| %>
            <div class="form-group">
              <%= f.label :, '写真' %>
              <%= file_field_tag :image, class: 'form-control' %>
            </div>
            <%= f.submit '更新する', class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      <div class="col-md-offset-1"></div>
    </div>
  </div>
</div>