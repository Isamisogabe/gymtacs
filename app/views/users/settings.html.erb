<div class="row">
  <div class="col-md-3">
		<ul class="list-group">
			<li class="profile-list list-group-item"><%= link_to "プロフィール", settings_path %></li>
			<li class="list-group-item"><%= link_to "アカウント", account_path %></li>
		</ul>
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-6 col-md-offset-2">
        <img src="<%= gravatar_url(@user, {size: 50 }) %>" alt="ユーザー写真" class="img-rounded" >
        <%= link_to @user.name, @user %> /　アカウント設定
      </div>
      <div class="col-md-offset-4"></div>
        <div class="col-md-offset-1 col-md-10">
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <ul class="well well-lg">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= form_for(@user)  do |f| %>
            <div class="form-group">
              <%= f.label :location, '場所' %>
              <%= f.text_field :location, class: 'form-control' %>
            </div>
            
            <div class="form-group">
              <%= f.label :belong, '所属' %>
              <%= f.text_field :belong, class: 'form-control' %>
            </div>
            
            <div class="form-group">
              <%= f.label :description, '自己紹介' %>
              <%= f.text_area :description, class: 'form-control' %>
            </div>
            
            <%= f.submit '更新する', class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      <div class="col-md-offset-1"></div>
    </div>
  </div>
</div>