<header>
  <nav class="navbar navbar-inverse navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">gymtacs</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            
            <li><%= link_to "お気に入り一覧", like_path %></li>
            <li><%= link_to "ファイル一覧", pick_path %></li>
            <li><%= link_to "投稿する", :new_item %></li>
            <li class"dropdown">
              <button class="btn btn-success navbar-btn dropdown-toggle" type="button" data-toggle="dropdown">
            		<%= render "users/user_photo", user: current_user %>
            		<span class="caret"></span>
            	</button>
            	<ul class="dropdown-menu" role="menu">
            	  <li role="presentation"><%= link_to "マイページ", @current_user %></li>
            	  <li role="presentation"><%= link_to "下書き一覧", items_path %></li>
            	  <li role="presentation"><%= link_to "設定", settings_path %></li>
            		<li role="presentation"><%= link_to "ログアウト", logout_path, method: :delete %></li>
            	</ul>
            </li>
          <% else %>
          
            <li><%= link_to "SignUp", signup_path %></li>
            <li><%= link_to "LogIn", login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>