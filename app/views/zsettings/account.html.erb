<div class="row">
  <div class="col-md-3">
		<ul class="nav navbar-nav">
			<li><%= link_to "プロフィール", "./profile" %></li>
			<li><%= link_to "アカウント", "./account" %></li>
		</ul>
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-6 col-md-offset-2">
        <img src="<%= gravatar_url(@user, {size: 50 }) %>" alt="ユーザー写真" class="img-rounded" >
        <%= link_to @user.name, @user %> /　アカウント設定
      </div>
      <div class="col-md-offset-4"></div>
        <%= form_for settings_path(@user), method: :put do |f| %>
          <div class="col-md-offset-1 col-md-10">
            
            <div class="form-group">
              <%= f.label :image, '写真設定' %>
              <%= select @user, :image, [["gravatar画像",false], ["ユーザー写真",true]], class: 'form-control' %>
            </div>
            
            <div class="form-group">
              <%= f.label :email, 'Eメール' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            
            <div class="form-group">
              <%= f.label :name, '名前' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            
            
          </div>
          <div class="col-md-offset-1"></div>
          <div class="col-md-offset-8 col-md-3">
            <%= f.submit '更新する', class: 'btn btn-success btn-block' %>
          </div>
          <div class="col-md-offset-1"></div>
        <% end %>
      
    </div>
    
    <div class="row">
      <div class="col-md-2 col-md-offset-1">
        <%= link_to "削除する", setting_path(@user), method: :delete, class: "btn btn-danger" %>
      </div>
      <div class="col-md-offset-9"></div>
    </div>
  </div>
</div>