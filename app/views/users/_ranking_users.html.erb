<% if follow_users.any? %>
  <ul class="media-list">
    <% follow_users.each_with_index do |user, index| %>
      <li class="media">
        <div class="media-left">
          <p><%= index+1 %></p>
        </div>
        <div class="media-left">
          
          <a href="/users/<%= user.id %>" >
            <img alt="ユーザー写真" src="<%= gravatar_url(user, {size: 40 }) %>" class="img-rounded">
          </a>
        </div>
        <div class="media-body">
          <div>
            <h5 class="media-heading">
              <%= link_to user.name, user %>
            </h5>
          </div>
          <div>
            <p>
              <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
              <%= follow_ranking_counts[user.id] %>
            </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>